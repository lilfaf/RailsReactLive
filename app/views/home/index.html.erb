<div class="row">
  <div class="col-sm-6 ">
    <div class="well clearfix">
      This an example application using Ruby on Rails and React components
      <hr>
      <h2>About Me</h2>
      <%= gravatar_image class: "img-circle gravatar" %>
      <hr>
      <div class="social-links pull-right">
        <%= link_to "https://github.com/lilfaf", target: "_blank" do %>
          <span class="fa-stack fa-2x">
            <i class="fa fa-circle fa-stack-2x"></i>
            <i class="fa fa-github-alt fa-stack-1x fa-inverse"></i>
          </span>
        <% end %>
        <%= link_to "https://twitter.com/semtazone", target: "_blank" do %>
          <span class="fa-stack fa-2x">
            <i class="fa fa-circle fa-stack-2x"></i>
            <i class="fa fa-twitter fa-stack-1x fa-inverse"></i>
          </span>
        <% end %>
        <%= link_to "https://www.linkedin.com/profile/view?id=AAIAAAWM3HUBeriJSmVOEqespLDLVlRCKD9yBWQ", target: "_blank" do %>
          <span class="fa-stack fa-2x">
            <i class="fa fa-circle fa-stack-2x"></i>
            <i class="fa fa-linkedin fa-stack-1x fa-inverse"></i>
          </span>
        <% end %>
      </div>
    </div>
  </div>
  <div class="col-sm-6">
    <%- if current_user %>
      <%= react_component("TweetsContainer", tweetsPath: tweets_path) %>
    <% else %>
      <div class="alert alert-warning">
        <strong>IT'S DEMO TIME!</strong><br>
        Please sign in with your twitter account to access a live stream of your timeline.
      </div>

      <%= link_to 'auth/twitter', class: 'btn btn-twitter' do %>
        <%= fa_icon 'twitter' %>
        Sign in with twitter
      <% end %>
    <% end %>
  </div>
</div>
